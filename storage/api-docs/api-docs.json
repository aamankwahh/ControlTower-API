{
    "openapi": "3.0.0",
    "info": {
        "title": "Control Tower",
        "version": "0.1"
    },
    "paths": {
        "/api/{callsign}/intent": {
            "post": {
                "tags": [
                    "Request Aircraft State Change"
                ],
                "summary": "Aircraft state change request",
                "operationId": "e0da4298ae7969ddf97ab18fb03ef249",
                "parameters": [
                    {
                        "name": "callsign",
                        "in": "path",
                        "description": "Aircraft's call sign",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "examples": {
                            "string": {
                                "summary": "Airliner - Current State: PARKED",
                                "value": "AR101"
                            }
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "state": {
                                        "type": "string"
                                    },
                                    "token": {
                                        "type": "string"
                                    }
                                },
                                "type": "object",
                                "example": {
                                    "state": "TAKEOFF",
                                    "token": "1a1f91e2241e9056cf2dd4f9cf66e8da"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "204": {
                        "description": "OK"
                    }
                }
            }
        }
    }
}